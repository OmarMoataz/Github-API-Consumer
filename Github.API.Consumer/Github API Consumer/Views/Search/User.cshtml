@model Github.Library.User

@{
    ViewBag.Title = "User";
}

<h2>User</h2>

<table class="table table-dark">
    <tbody>

        <tr>
            <td>Name</td>
            <td>@Model.Login</td>
        </tr>
        <tr>
            <td>Biography</td>
            <td>@Model.Bio</td>
        </tr>
        <tr>
            <td>Company</td>
            <td> @Model.Company</td>
        </tr>
        <tr>
            <td>Repos</td>
            <td>@Model.PublicRepos</td>
        </tr>

        <tr>
            <td>Url</td>
            <td>@Model.Url</td>
        </tr>

        <tr>
            <td>Id</td>
            <td>@Model.Id</td>
        </tr>

        <tr>
            <td>Followers</td>
            <td>@Model.Followers</td>
        </tr>


        <tr>
            <td>Following</td>
            <td>@Model.Following</td>
        </tr>
        <tr>
            <td>Avatar</td>
            <td><img style="width: 200px" src="@Model.AvatarUrl" /></td>
        </tr>
    </tbody>
</table>